<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    
    
    
    <style name="sectionBodyText">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="sectionTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/sectionTitleColor</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    
    
    
    
    

    <style name="itemFocusProgressBarText">
        <item name="android:textSize">10sp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
    </style>


    <style name="itemFocusProgressBarTextDays">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    
    <style name="itemFocusGridItem">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">.5</item>
    </style>

    <style name="itemFocusGridItemLabel">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="itemFocusGridItemUsername">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="itemFocusGridItemImg">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:padding">1dp</item>
    </style>





</resources>
